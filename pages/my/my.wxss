.header{
  display: flex;
  align-items: center;
  width: 100%;
  height: 138rpx;
  background-color:  #35BD00;
  margin-bottom: 42rpx;
}
.header-portrait{
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-left: 96rpx;
}
.header-text{
  flex: 1;
  margin: 0 22rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}
.header-name{
  font-size: 28rpx;
  padding-bottom: 8rpx;
}
.header-arrow{
  width: 18rpx;
  height: 30rpx;
  margin-right: 57rpx;
}
.info{
  display: flex;
  align-items: center;
  width: 100%;
  height: 108rpx;
  border-bottom: 1rpx solid #cccccc;
}
.info-img{
  width: 32rpx;
  height: 42rpx;
  margin: 0 81rpx 0 63rpx;
}
.info-text{
  font-size: 28rpx;
  color: #626161;
}